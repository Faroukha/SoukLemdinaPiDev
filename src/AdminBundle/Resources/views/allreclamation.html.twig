{% block body %}
    <div class="product_item">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                {% for rec in recs %}
                    <div class="col-md-3">
                                <div class="bd_month">{{ rec.Name }}</div>
                                <div class="bd_month">{{ rec.Email }}</div>
                                <div class="bd_month">{{ rec.Subject }}</div>
                                <div class="bd_month">{{ rec.Message }}</div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="blog_pagination text-center" aria-label="Page navigation example">
        {{ knp_pagination_render(recs) }}
    </div>

{% endblock %}